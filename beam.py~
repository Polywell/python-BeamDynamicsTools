from numpy import *

class beam:
	def __init__ (self,E0=0.9e6,A0=2,I0=1e-3,Freq=425e6):

		# B = Magnetic Field [T] (bfield class)
		# Vessel = Defines wall (boundary class)
		# A0 = atomic mass [amu]
		# E0 = beam energy [MeV]
		# r  = position vector [x, y, z]
		# v  = velocity vector [Vx, Vy, Vz]
		# a  = acceleration vector [ax, ay, az] 

		c0 = 299792458; self.c0 = c0
		qm = (1.60217646e-19)/(A0*1.67262158e-27)

		self.A0 = A0
		self.q0 = 1.60217646e-19
		self.m0 = A0 * 1.67262158e-27
		self.I0 = I0
		self.Frequency = Freq
